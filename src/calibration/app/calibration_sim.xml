<application>
    <name>Eye-hand calibration (simulation)</name>

    <module>
        <name>realsense-holder-calibration</name>
        <parameters>--robot_name icubSim</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /realsense-holder-calibration/viewer/rgb:i</parameters>
        <node>localhost</node>
    </module>

    <connection>
        <from>/icubSim/cam/left/rgbImage:o</from>
        <to>/realsense-holder-calibration/rgb:i</to>
        <protocol>fast_tcp</protocol>
    </connection>

    <connection>
        <from>/icubSim/cam/left/rgbImage:o</from>
        <to>/realsense-holder-calibration/viewer/rgb:i</to>
        <protocol>fast_tcp</protocol>
    </connection>

</application>
